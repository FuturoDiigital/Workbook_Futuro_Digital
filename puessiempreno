function generarYDescargarPDF() {
  const { jsPDF } = window.jspdf;
  const motivo = document.getElementById("motivo")?.value || "(Sin respuesta)";
  const meta = document.getElementById("meta")?.value || "(Sin respuesta)";
  const doc = new jsPDF();
  doc.setFontSize(16);
  doc.text("<img src="https://futurodigitall.github.io/WorkbookFuturoDigital/futuro_digital_logo_correcto.png" style="height: 80px;" alt="Futuro Digital" style="height: 60px;"> - MI WORKBOOK", 20, 20);
  doc.setFontSize(12);
  doc.text("¿Por qué quiero entrar?:", 20, 40);
  doc.text(motivo, 20, 50, { maxWidth: 170 });
  doc.text("¿Cuál es mi meta?:", 20, 80);
  doc.text(meta, 20, 90, { maxWidth: 170 });
  doc.setFontSize(11);
  doc.text("📲 Enviar este PDF por WhatsApp al +52 1 55 2563 0618", 20, 120);
  doc.save("Mi_Workbook_Futuro_Digital.pdf");
}
</script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    // Guardar y cargar datos de LocalStorage
    const inputs = document.querySelectorAll("input, textarea");

    inputs.forEach(input => {
        const key = input.placeholder || input.name || input.id;
        if (!key) return;

        // Cargar dato si existe
        const storedValue = localStorage.getItem(key);
        if (storedValue) input.value = storedValue;

        // Guardar al escribir
        input.addEventListener("input", () => {
            localStorage.setItem(key, input.value);
        });
    });
});
</script>
<script>
document.addEventListener("DOMContentLoaded", function () {
    const inputs = document.querySelectorAll("input, textarea");
    const saveNotification = document.createElement("div");

    saveNotification.style.position = "fixed";
    saveNotification.style.bottom = "20px";
    saveNotification.style.right = "20px";
    saveNotification.style.padding = "10px 20px";
    saveNotification.style.background = "#ffc107";
    saveNotification.style.color = "#000";
    saveNotification.style.fontWeight = "700";
    saveNotification.style.borderRadius = "10px";
    saveNotification.style.boxShadow = "0 4px 10px rgba(0,0,0,0.3)";
    saveNotification.style.display = "none";
    saveNotification.innerText = "¡Tus respuestas se han guardado!";
    document.body.appendChild(saveNotification);

    function showSaveNotification() {
        saveNotification.style.display = "block";
        setTimeout(() => {
            saveNotification.style.display = "none";
        }, 1500);
    }

    inputs.forEach(input => {
        const key = input.placeholder || input.name || input.id;
        if (!key) return;

        // Cargar dato si existe
        const storedValue = localStorage.getItem(key);
        if (storedValue) input.value = storedValue;

        // Guardar al escribir
        input.addEventListener("input", () => {
            localStorage.setItem(key, input.value);
            showSaveNotification();
        });
    });
});
</script>
<section style="text-align: center; padding: 3rem;">
<h2 style="font-size: 1.6rem; color: #ffc107; margin-bottom: 1rem; font-family: 'JetBrains Mono', monospace;">
    📥 Descarga tu Workbook con tus respuestas
  </h2>
